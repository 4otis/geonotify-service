                    ]
                },
                "description": "Тестирование Health Check"
            },
            "response": []
        },
        {
            "name": "2. Создание инцидента",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer secret-api-key-required"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Тестовая опасная зона\",\n    \"descr\": \"Зона для тестирования\",\n    \"latitude\": 55.7558,\n    \"longitude\": 37.6176,\n    \"radius_m\": 1000\n}"
                },
                "url": {
                    "raw": "http://localhost:8081/api/v1/incidents",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8081",
                    "path": [
                        "api",
                        "v1",
                        "incidents"
                    ]
                },
                "description": "Создание тестовой опасной зоны. Сохранить incident_id в переменную"
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "// Сохраняем incident_id в переменную",
                            "var jsonData = pm.response.json();",
                            "var incidentId = jsonData.incident_id || jsonData.IncidentID;",
                            "pm.collectionVariables.set(\"incident_id\", incidentId);",
                            "",
                            "// Проверяем ответ",
                            "pm.test(\"Status code is 201\", function () {",
                            "    pm.response.to.have.status(201);",
                            "});",
                            "",
                            "pm.test(\"Response has incident_id\", function () {",
                            "    pm.expect(incidentId).to.be.a('number');",
                            "    pm.expect(incidentId).to.be.above(0);",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
